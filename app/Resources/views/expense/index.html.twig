{% extends 'base.html.twig' %}

{% block head %}
{% endblock %}

{% block body %}
{{ parent() }}
    <h1>Expense list</h1>
<br>
<div class="container">
    <div class="col-6 col-sm-1 col-md-1"></div>
    <div class="col-6 col-sm-10 col-md-10">
        <table  class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Amount</th>
                    <th>Priority</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for expense in expenses %}
                <tr>
                    <td>{{ expense.title }}</td>
                    <td>{{ expense.amount }} z≈Ç</td>
                    <td>{{ expense.priority }}</td>
                    <td>{% if expense.date %}{{ expense.date|date('Y-m-d') }}{% endif %}</td>
                    <td>{{ expense.category.name }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('expense_show', { 'id': expense.id }) }}">Delete</a>
                            </li>
                            <li>
                                <a href="{{ path('expense_edit', { 'id': expense.id }) }}">Edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
