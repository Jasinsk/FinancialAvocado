{% extends "::base.html.twig" %}

{% block body %}

        <h1>Filter and sort</h1>
        <div class="container">
            <div class="col-md-4"></div>
        <div class="col-md-4">
            {% form_theme form 'bootstrap_3_layout.html.twig' %}
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
    </div>
    <h2>Expenses list</h2>
    <div class="container">
    <div class=" col-md-12">
    <table  class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Amount</th>
            <th>Priority</th>
            <th>Date</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.title }}</td>
                <td>{{ expense.amount }} z≈Ç</td>
                <td>{{ expense.priority }}</td>
                <td>{% if expense.date %}{{ expense.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ expense.category.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('expense_show', { 'id': expense.id }) }}">Delete</a>
                        </li>
                        <li>
                            <a href="{{ path('expense_edit', { 'id': expense.id }) }}">Edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}